<h1 class="text-center">Jungle Signup!</h1>

<div class="row">
<div class="col-sm-6 col-sm-offset-4">
<%= form_for :user, url: '/users' do |f| %>

<div class="form-group">
<h4>First Name: <%= f.text_field :first_name %></h4>
</div>

<div class="form-group">
<h4>Last Name: <%= f.text_field :last_name %></h4>
</div>

<div class="form-group">
<h4>Email: <%= f.text_field :email %></h4>
</div>

<div class="form-group">
<h4>Password: <%= f.text_field :password %></h4>
</div>

<div class="form-group">
<h4>Password Confirmation: <%= f.password_field :password_confirmation %></h4>
</div>

<div class="form-group">
<%= f.submit "Signup", class: "btn btn-primary"%>
</div>

<% end %>
</div>
</div>